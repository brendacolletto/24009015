//3)A
#include<iostream>
#include<math.h>

using namespace std;

int main ()
{

  double C, F ;

  cout <<("\nEntre com os graus em Fahrenheit:");
  cin >> F;

  C = (F-32.0)*(5.0/9.0);

  printf("\nGraus em Celsius: %lf", C);

  return 0;

}

//B
#include<iostream>
#include<math.h>

using namespace std;

int main ()
{

  int C, F ;

  cout <<("\nEntre com os graus em Fahrenheit:");
  cin >> F;

  C = (F-32)*(5/9);

  printf("\nGraus em Celsius: %d", C);

  return 0;

}
//A) C = (15-32.0)*(5.0/9.0) = -9.4 ; B) B sempre dara zero, ja que como utilizamos int e o resultado esta em um numero decimal, o programa nao consegue reproduzir o numero.

//4
#include<iostream>
#include<math.h>

using namespace std;

int main ()
{

   float C;

   cout << ("\nEntre com a temperatura em Celsius:");
   cin >> C;


   if (C<= 0)
   {
       printf("\nGeleira - Temperatura muito fria!");
   }
   else if ((C>=1)&&(C<=15))
   {
    printf("\nFrio - Pode precisar de um casaco!");
   }
   else if ((C>=16)&&(C<=25))
   {
    printf("\nAgradavel - Tempo bom para sair!");
   }
   else if ((C>=26)&&(C<=35))
   {
     printf("\nQuente - Ótimo para um dia de praia!");
   }
   else if(C>35)
   {
      printf("\nMuito quente - Mantenha-se hidratado!");
   }
    return 0;
}
//5
#include<iostream>
#include<math.h>

using namespace std;

int main ()
{
    float C;

    cout <<("\nEntre com a temperatura atual do deposito:");
    cin >> C;

    if (C<-10)
    {

       printf("\nRisco Baixo - Armazenamento ideal para alimentos congelados");

    }
    else if ((C>=-10)&&(C<=0))
    {

      printf("\nRisco Moderado - Condicoes aceitaveis para armazenamento refrigerado");

    }
    else if((C>=1)&&(C<=10)||(C=15))
    {

     printf("\nRisco Elevado - Monitore a temperatura");

    }
    else if ((C>10)&&(C !=15))
    { 

       printf("\nRisco Crítico - Acao Imediata Necessaria!");

    }
    return 0;
}
