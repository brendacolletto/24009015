#include <iostream>

int main() {
    // Declaração das variáveis
    double receita = 0.0;
    double despesa = 0.0;
    double saldo = 0.0;

    // Solicita que o usuário insira a receita
    std::cout << "Insira o valor da receita: ";
    std::cin >> receita;

    // Solicita que o usuário insira a despesa
    std::cout << "Insira o valor da despesa: ";
    std::cin >> despesa;

    // Calcula o saldo atual
    saldo = receita - despesa;

    // Exibe o saldo atualizado
    std::cout << "Saldo: " << saldo << std::endl;

    return 0;
}
